<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorWASM</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="api-projekt">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> API Projekt
            </NavLink>
        </div>
        
        <!-- Studieplan Dropdown -->
        <div class="nav-item px-3">
            <div class="nav-link" @onclick="ToggleStudyPlanMenu">
                <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> Studieplan
                <span class="oi oi-chevron-bottom @(showStudyPlanMenu ? "rotate" : "")"></span>
            </div>
            @if (showStudyPlanMenu)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="syllabus">
                        <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> Oversigt
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="api-calls">
                        <span class="bi bi-code-square-nav-menu" aria-hidden="true"></span> API Kald
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="oop">
                        <span class="bi bi-diagram-3-nav-menu" aria-hidden="true"></span> OOP & Async
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="error-handling">
                        <span class="bi bi-exclamation-triangle-nav-menu" aria-hidden="true"></span> Error Handling
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="data-serialization">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Data Serialisering
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="design-patterns">
                        <span class="bi bi-diagram-3-nav-menu" aria-hidden="true"></span> Design Patterns
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="solid">
                        <span class="bi bi-diagram-3-nav-menu" aria-hidden="true"></span> SOLID
                    </NavLink>
                </div>
                

            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showStudyPlanMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleStudyPlanMenu()
    {
        showStudyPlanMenu = !showStudyPlanMenu;
    }
}
